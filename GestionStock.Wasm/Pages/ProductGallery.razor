@page "/products"  

<PageTitle>Galerie de Produits</PageTitle>

<div class="container mt-4">
    <header class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-4 fw-bold mb-0">Notre Catalogue</h1>
            <p class="lead text-muted">Bière, Vin, Soft et Alcool.</p>
        </div>

        @* Bouton d'ajout principal *@
        <button class="btn btn-primary btn-lg rounded-pill shadow d-flex align-items-center px-4"
                @onclick="HandleAddProduct">
            <i class="bi bi-plus-lg me-2"></i>
            <span class="fw-bold">Ajouter un produit</span>
        </button>
    </header>

    @if (_errorMessage != null)
    {
        <div class="alert alert-danger shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @_errorMessage
        </div>
    }
    else if (_products == null)
    {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Chargement...</span>
            </div>
        </div>
    }
    else if (!_products.Any())
    {
        <div class="text-center py-5 border rounded-3 bg-light">
            <i class="bi bi-box-seam display-1 text-muted"></i>
            <p class="mt-3 fs-5">Aucun produit trouvé dans votre inventaire.</p>
            <button class="btn btn-outline-primary mt-2" @onclick="HandleAddProduct">Créer votre premier produit</button>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var product in _products)
            {
                <div class="col">
                    @* ... (Le code de la carte reste identique à l'étape précédente) ... *@
                    <div class="card h-100 border-0 shadow-sm product-card">
                        <div class="position-relative overflow-hidden" style="height: 200px;">
                            <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "images/placeholder.jpg" : product.ImageUrl)"
                                 class="card-img-top h-100 w-100 object-fit-cover"
                                 alt="@product.Name">
                            <div class="price-badge">@product.Price.ToString("C2")</div>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@product.Name</h5>
                            <div class="mb-2">
                                @foreach (var cat in product.Categories)
                                {
                                    <span class="badge rounded-pill bg-light text-dark border me-1">@cat.Name</span>
                                }
                            </div>
                            <p class="card-text text-muted small flex-grow-1">
                                @(product.Description.Length > 80 ? product.Description.Substring(0, 77) + "..." : product.Description)
                            </p>
                            <button class="btn btn-outline-primary mt-3 w-100 rounded-pill shadow-sm" @onclick="()=>HandleSelectProduct(product.Id)">Détails</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@* Bouton Flottant (Mobile Friendly) *@
<button class="btn btn-primary shadow-lg floating-add-btn d-md-none" @onclick="HandleAddProduct" >
    <i class="bi bi-plus-lg fs-2"></i>
</button>
 

 