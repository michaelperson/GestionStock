<div class="dropdown">
    <button class="btn btn-outline-secondary dropdown-toggle w-100 text-start"
            type="button"
            @onclick="ToggleDropdown">
        @((SelectedItems.Any()) ? string.Join(", ", SelectedItems.Select(c => c.Display)) : "Sélectionner des catégories...")
    </button>

    <div class="dropdown-menu w-100 @(isOpen ? "show" : "")" style="max-height: 300px; overflow-y: auto; padding: 10px;">
        @foreach (var item in Items)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox"
                       id="cat-@item.Value"
                       checked="@IsSelected(item)"
                       @onchange="(e) => OnCheckboxChange(item, e.Value)" />
                <label class="form-check-label" for="cat-@item.Value">
                    @item.Display
                </label>
            </div>
        }
    </div>
</div>

 